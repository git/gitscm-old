<div id="results" class="search-results">  
  <form id="sr-searchbox">
  <div class="stitle">
    <table width="100%" cellpadding="0" cellspacing="0">
      <tr><td>
        <h1>Search Results</h1>
      </td><td align="right">
        <div id="sr-form">
          <input name="search" id="sr-searchterm" value="<%= @search %>">
          <input type="submit" value="Search">
        </div>
      </td></tr>
    </table>
  </div>
  </form>

  <% if @command %>
    <div class="doc-section">
      <div class="flag <%= @command.level %>"><%= @command.level %></div>
      <div class="sr-title">
        <%= @command.full_command %>
      </div>
      <div class="sr-desc"><%= @command.description %></div>
      <div class="sr-usage"><pre><%= @command.clean_usage %></pre></div>
      <div class="sr-links">
        <small><a href="manpage">command page</a></small> &nbsp;
        <small><a href="manpage">manual page</a></small> &nbsp;
        <small><a href="manpage">category page</a></small>
      </div>
    </div>

      <% if @command.has_examples? %>
        <div class="doc-section">
          <h2>Examples</h2>
        </div>
      <% end %>
      
      <% if @command.has_book_chapters? %>
        <div class="doc-section">
          <h2>Book</h2>
          (go to chapter)
        </div>
      <% end %>
      
      <% if @command.has_manual_pages? %>
        <div class="doc-section">
          <h2>Related Tools</h2>
             - go to chapter
        </div>
      <% end %>
      
    <div class="doc-section">
      <h2>Categories</h2>
      <% @command.categories.each do |cat| %>
         <h3><%= cat.category %></h3>
          <% cat.commands.each do |cmd| %>
            <div class="command-link"><%= cmd.command %></div>
          <% end %>
          <br clear="both"/>
      <% end %>
    </div>   
    
  <% end %>
  <br/>
  
  <script type="text/javascript">
    $(function() {
      $('#sr-searchbox').submit(function() {
        term = $('#sr-searchterm').val();
        $.get('/page/searchbox?update=1&search=' + term, function(data) {
          $('#results').html(data);
        });
        $('#sr-searchterm').focus();
        return false;
      });
    });
  </script>
  
</div>
